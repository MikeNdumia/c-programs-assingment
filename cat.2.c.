#include <stdio.h>

void calculate_pay(float hours, float wage, float *gross_pay, float *taxes, float *net_pay) {
    // Calculate gross pay
    if (hours <= 40) {
        *gross_pay = hours * wage;
    } else {
        *gross_pay = (40 * wage) + ((hours - 40) * wage * 1.5);
    }

    // Calculate taxes
    if (*gross_pay <= 600) {
        *taxes = *gross_pay * 0.15;
    } else {
        *taxes = (600 * 0.15) + ((*gross_pay - 600) * 0.20);
    }

    // Calculate net pay
    *net_pay = *gross_pay - *taxes;
}

int main() {
    float hours, wage, gross_pay, taxes, net_pay;

    printf("Enter hours worked in a week: ");
    scanf("%f", &hours);
    printf("Enter hourly wage: ");
    scanf("%f", &wage);
    
    calculate_pay(hours, wage, &gross_pay, &taxes, &net_pay);
    
    printf("Gross Pay: KES %.2f\n", gross_pay);
    printf("Taxes: KES %.2f\n", taxes);
    printf("Net Pay: KES %.2f\n", net_pay);

    return 0;
}